@import './mixins'

background_color = #F2E4FF
foreground_color = #007DFFFF
border_color = #69CAA7
border_color_active = #BC5C74
button_background = #E4BCA4FF
button_background_hover = #ECCFA1

tododay_border_color = #F2CC7B
tododay_background_color = #FFE5FB

tododay_header_background = #DADF70

link_color = #875EB4
link_active_color = #6FAEA2
link_background_active_color = #97D8FA

button_color = #875EB4
button_border_color = #875EB4
button_border_radius = 10px
button_active_background = #875EB4

body, html
	margin 0
	padding 0
	background-color background_color

*
	font-family 'Noto Serif', serif;
	box-sizing border-box

a
	text-decoration none
	color: link_color
	&:hover
		color: link_active_color
	&.active
		color: link_active_color

	&.button
		display inline-block
		margin-left auto
		margin-right auto
		padding 4px 16px
		border 1px solid button_border_color
		border-radius button_border_radius
		&:hover, &:active
			background-color button_active_background

.clearfix:before, .clearfix:after
	content ""
	display table
.clearfix:after
	clear both


.todoAppHeader
	text-align center
	padding-bottom: 16px
	a
		display inline-block
		padding 4px 8px
		&:hover
			background-color link_background_active_color
		&.active
			background-color link_background_active_color

.app
	.navBar
		flexbox()
		justify-content center
		background-color tododay_header_background
		padidng-left 10px
		padidng-right 10px
		a
			display block
			padding 8px 16px
			&.active
				background-color link_background_active_color

.todoDayList
	.todoDayListBottom
		text-align center

.todoDay
	display block
	max-width 50%
	margin: 10px auto
	background-color tododay_background_color
	.todoDayHeader
		text-align center
		border-top-left-radius 4px
		border-top-right-radius 4px
		background-color tododay_header_background
		input[type="text"]
			display block
			font-weight bold
			font-size 1.5em
			text-align center
			margin 16px auto
			background none
			border none
			&:focus
				outline none
				border-color border_color_active


	.todoList
		list-style none
		padding 10px 20px
		li
			margin-top 8px
			margin-bottom 8px
			border-bottom 1px solid border_color
		li:last-child
			border-bottom none

	.todoItem
		flexbox()
		flex-flow row nowrap
		p
			margin 0
			padding-left 4px
			&.todoCompleted
				text-decoration line-through
			&.todoIncompleted
				text-decoration none
		.todoButtons
			min-width 50px

	.todoForm
		padding 6px
		*
			display inline
			border-width 1px
			border-radius 3px
			padding 6px
		input[type="text"]
			width 78%
			margin-right 2%
			border-style solid
			border-color border_color
			&:focus
				outline none
				border-color border_color_active
		input[type="submit"]
			width 20%

/**
**
**	From here is button style and CSS custom ICON
**
**/

.iconButton
	background #fff
	display inline-block
	postion absolute
	top 10px
	width 20px
	height 20px
	padding 2px
	margin-left 2px
	margin-right 2px
	border solid 1px button_background
	transition all .25s ease-in-out;
	span
		display block
		transition all .25s ease-in-out;
	.iconButtonRemove
		color #000
		position absolute
		margin-top 0
		margin-left 0
		width 12px
		height 12px
	.iconButtonRemove:before
		content ''
		position absolute
		top 7px
		left 0px
		width 15px
		height 2px
		background-color foreground_color
		-webkit-transform rotate(-45deg)
		transform rotate(-45deg)
	.iconButtonRemove:after
		content ''
		position absolute
		top 7px
		left 0px
		width 15px
		height 2px
		background-color foreground_color
		-webkit-transform rotate(45deg)
		transform rotate(45deg)

	.iconButtonCheck
		color #000
		position absolute
		margin-top 3px
		margin-left 2px
		width 12px
		height 6px
		border-bottom solid 2px foreground_color
		border-left solid 2px foreground_color
		-webkit-transform rotate(-45deg)
		transform rotate(-45deg)

	.iconButtonUncheck
		color #000
		position relative
		top 50%
		left 50%
		width 10px
		height 2px
		background-color foreground_color
		transform translate(-50%, -50%)
.iconButton:hover
	background-color button_background_hover
